<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wsw.cloudtest.mapper.LocalMessageMapper">
    <resultMap id="BaseResultMap" type="com.wsw.cloudtest.domain.LocalMessage">
        <id column="id" property="localMessageId" jdbcType="BIGINT"/>
        <result column="message" property="message" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="INTEGER"/>
    </resultMap>

    <insert id="insertLocalMessage" parameterType="LocalMessage" useGeneratedKeys="true" keyProperty="id">
        insert into local_message(id, message, status) values(#{localMessageId}, #{message}, #{status});
    </insert>

    <update id="updateLocalMessage">
        update local_message set status=#{status} where id=#{localMessageId}
    </update>

    <select id="selectFailMessage" resultMap="BaseResultMap">
        select * from local_message where status=#{status}
    </select>
</mapper>